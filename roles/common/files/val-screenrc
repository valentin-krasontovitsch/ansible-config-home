defscrollback 10000

vbell off

shell /usr/bin/fish
## ctrl+a navigating regions
bind j focus down
bind k focus up
bind ^h focus prev
bind t focus top
bind b focus bottom

term screen-256color
defutf8 on
defencoding utf8

startup_message off
hardstatus alwayslastline

# make CWD available for screen hardstatus as %1`
backtick 1 0 5 echo $PWD

# more recent, more concise
hardstatus string "%H | %S - %n | %h %= %D %M%d | %C:%s "
# more verbose, older
#hardstatus string "%{= KW}GNU screen | Host: %H | Session: %S | Window: %n - %h %= %D, %d %M %Y | %C:%s"

# open bunch of blank screens
screen
screen
screen
screen
screen
screen
screen
screen
screen
screen
