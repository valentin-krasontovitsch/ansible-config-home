[Unit]
Description=Radio Web API Server
After=pulseaudio.service bluetooth.target sound.target

[Service]
ExecStart=/usr/local/bin/{{ binary | basename }}
Restart=on-failure
User=root
RestartSec=5
Environment="PLAYER=/usr/bin/mplayer"
Environment="PLAYER_OPTIONS=-really-quiet"

[Install]
WantedBy=multi-user.target
